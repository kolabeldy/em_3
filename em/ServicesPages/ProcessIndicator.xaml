<Window x:Class="em.ServicesPages.ProcessIndicator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:em.ServicesPages"
        mc:Ignorable="d"
        Title="ProcessIndicator" Height="169" Width="409" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Topmost="True" WindowStyle="None">
    <Grid>
        <Border BorderBrush="{StaticResource PrimaryHueMidBrush}" BorderThickness="4">
            <StackPanel Background="WhiteSmoke">
                <TextBlock 
                    Margin="20,30,0,0"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Text="Процесс займёт значительное время."  />
                <TextBlock 
                    Margin="20,5,20,20"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    Text="Необходимо дождаться появления окна Excel"  />

                <ProgressBar 
                    HorizontalAlignment="Stretch" 
                    Margin="20"
                    Height="15" 
                    VerticalAlignment="Center" 
                    IsIndeterminate="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
